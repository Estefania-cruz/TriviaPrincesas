<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E47EA1"
    tools:context=".PreguntaActivity3">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¿Cómo describirías a tu hombre ideal?"
        tools:layout_editor_absoluteX="86dp"
        tools:layout_editor_absoluteY="47dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="328dp"
        android:layout_height="201dp"
        app:srcCompat="@drawable/que_principe_de_disney_es_tu_pareja_ideal"
        tools:layout_editor_absoluteX="41dp"
        tools:layout_editor_absoluteY="137dp" />

    <CheckBox
        android:id="@+id/checkPregunta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Intelectual"
        tools:layout_editor_absoluteX="144dp"
        tools:layout_editor_absoluteY="469dp" />

    <CheckBox
        android:id="@+id/checkPregunta2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" No lo se no pienso mucho en el amor"
        tools:layout_editor_absoluteX="63dp"
        tools:layout_editor_absoluteY="526dp" />

    <CheckBox
        android:id="@+id/checkPregunta3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guapo"
        tools:layout_editor_absoluteX="144dp"
        tools:layout_editor_absoluteY="405dp" />

    <Button
        android:id="@+id/btnSiguente"
        android:layout_width="205dp"
        android:layout_height="56dp"
        android:text="Siguiente pregunta"
        tools:layout_editor_absoluteX="124dp"
        tools:layout_editor_absoluteY="633dp" />
</android.support.constraint.ConstraintLayout>