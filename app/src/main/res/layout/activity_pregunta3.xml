<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E47EA1"
    tools:context=".PreguntaActivity3">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="47dp"
        android:layout_marginBottom="71dp"
        android:text="¿Cómo describirías a tu hombre ideal?"
        app:layout_constraintBottom_toTopOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="41dp"
        android:layout_marginEnd="41dp"
        android:layout_marginBottom="67dp"
        app:layout_constraintBottom_toTopOf="@+id/checkPregunta3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:srcCompat="@drawable/que_principe_de_disney_es_tu_pareja_ideal" />

    <CheckBox
        android:id="@+id/checkPregunta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="Intelectual"
        app:layout_constraintBottom_toTopOf="@+id/checkPregunta2"
        app:layout_constraintStart_toStartOf="@+id/checkPregunta3"
        app:layout_constraintTop_toBottomOf="@+id/checkPregunta3" />

    <CheckBox
        android:id="@+id/checkPregunta2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="23dp"
        android:text=" No lo se no pienso mucho en el amor"
        app:layout_constraintBottom_toTopOf="@+id/btnSiguente"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkPregunta" />

    <CheckBox
        android:id="@+id/checkPregunta3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="81dp"
        android:layout_marginBottom="11dp"
        android:text="Guapo"
        app:layout_constraintBottom_toTopOf="@+id/checkPregunta"
        app:layout_constraintStart_toStartOf="@+id/checkPregunta2"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <Button
        android:id="@+id/btnSiguente"
        android:layout_width="205dp"
        android:layout_height="0dp"
        android:layout_marginBottom="120dp"
        android:text="Siguiente pregunta"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkPregunta2" />
</android.support.constraint.ConstraintLayout>