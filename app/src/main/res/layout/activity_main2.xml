<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EA92B0"
    tools:context=".MainActivity2">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="37dp"
        android:layout_marginTop="43dp"
        android:layout_marginEnd="37dp"
        android:text="Si vas a una fiesta y no conoces a nadie¿Qué es lo que haces?"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/imageButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="31dp"
        android:layout_marginEnd="31dp"
        android:layout_marginBottom="119dp"
        app:layout_constraintBottom_toTopOf="@+id/checkPregunta"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:srcCompat="@drawable/a_c_050_a" />

    <CheckBox
        android:id="@+id/checkPregunta3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="22dp"
        android:text="Me pongo a bailar conozca a alguien o no."
        app:layout_constraintBottom_toTopOf="@+id/btnSiguente"
        app:layout_constraintStart_toStartOf="@+id/checkPregunta2"
        app:layout_constraintTop_toBottomOf="@+id/checkPregunta2" />

    <CheckBox
        android:id="@+id/checkPregunta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="24dp"
        android:text="Me quedo en una esquina no soy muy sociable."
        app:layout_constraintBottom_toTopOf="@+id/checkPregunta2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageButton" />

    <CheckBox
        android:id="@+id/checkPregunta2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="23dp"
        android:text="Busco a alguien que parezca simpatico."
        app:layout_constraintBottom_toTopOf="@+id/checkPregunta3"
        app:layout_constraintStart_toStartOf="@+id/checkPregunta"
        app:layout_constraintTop_toBottomOf="@+id/checkPregunta" />

    <Button
        android:id="@+id/btnSiguente"
        android:layout_width="205dp"
        android:layout_height="0dp"
        android:layout_marginStart="34dp"
        android:layout_marginBottom="151dp"
        android:text="Siguiente pregunta"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/checkPregunta3"
        app:layout_constraintTop_toBottomOf="@+id/checkPregunta3" />

</android.support.constraint.ConstraintLayout>